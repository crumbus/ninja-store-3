{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-users"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
        <form class="form-horizontal">

          <div class="table-responsive">

            <table class="table table-striped table-hover">

              <thead>
                <tr>
                  <td style="width: 1px;" class="text-center">
                    <input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" />
                  </td>
                  <td>{{ text_email }}</td>
                  <td>{{ text_date_added }}</td>
                  <td>{{ text_date_disable }}</td>
                  <td>{{ text_is_active }}</td>
                  <td>{{ text_actions }}</td>
                </tr>
              </thead>

              <tbody>
              {% if emails is not empty  %}
                {% for email in emails %}
                    <tr>
                      <td class="text-center">
                          {% if email.id in selected %}
                            <input type="checkbox" name="selected[]" value="{{ email.id }}" checked="checked" />
                          {% else %}
                            <input type="checkbox" name="selected[]" value="{{ email.id }}"/>
                          {% endif %}
                      </td>
                      <td>{{ email.email }}</td>
                      <td>{{ email.date_added }}</td>
                      <td>{{ email.date_disable }}</td>
                      <td>{{ email.is_active }}</td>
                      <td></td>
                    </tr>
                {% endfor %}
              {% else %}
                  <tr><td colspan="6" class="text-center">{{ text_empty }}</td></tr>
              {% endif %}
              </tbody>


            </table>

          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}