                        <a class="dropdown-item" href="{{ new_customer }}">{{ text_new }} {{ text_new_customer }}</a>
                        <a class="dropdown-item" href="{{ new_download }}">{{ text_new }} {{ text_new_download }}</a>
                        <a class="dropdown-item" href="{{ new_manufacturer }}">{{ text_new }} {{ text_new_manufacturer }}</a>
                    </div>
                </li>

                <li class="nav-item me-lg-1">
                    <a class="nav-link" href="{{ href_product }}" role="button">
                        <i class="fa fa-shopping-bag fa-lg"></i>
                    </a>
                </li>

                <li class="nav-item me-lg-1">
                    <a class="nav-link" href="{{ href_order }}" role="button">
                        <i class="fa fa-comments fa-lg"></i>
                    </a>
                </li>

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="{{ href_customer }}">
                        <span><i class="fa fa-users fa-lg"></i></span>
                    </a>
                </li>

                <li class="nav-item dropdown me-3 me-lg-1">
