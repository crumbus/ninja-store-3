{#                    />#}
{#                    <span class="input-group-text border-0 d-none d-lg-flex" id="btn-admin-search"><i class="fa fa-search"></i></span>#}
{#                </form>#}
                {{ search }}
            </div>
            <!-- Left elements -->

            <!-- Center elements -->
            <ul class="navbar-nav flex-row d-none d-md-flex">
                <li class="nav-item me-3 me-lg-1" id="btn-main-menu">
                    <a class="nav-link">
                        <span><i class="fa fa-bars fa-lg"></i></span>
                    </a>
                </li>

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="{{ home }}">
                        <span><i class="fa fa-home fa-lg"></i></span>
                    </a>
                </li>

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="{{ href_settings }}">
                        <span><i class="fa fa-cog fa-lg"></i></span>
                    </a>
                </li>

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="{{ href_language }}">
                        <span><i class="fa fa-flag fa-lg"></i></span>
                    </a>
                </li>

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="{{ href_currency }}">
                        <span><i class="fa fa-dollar fa-lg"></i></span>
                    </a>
                </li>

            </ul>
            <!-- Center elements -->

            <!-- Right elements -->
            <ul class="navbar-nav flex-row">

                <li class="nav-item me-lg-1">
                    <a class="nav-link dropdown-toggle" type="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-plus-circle fa-lg"></i>
                    </a>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ new_product }}">{{ text_new }} {{ text_new_product }}</a>
