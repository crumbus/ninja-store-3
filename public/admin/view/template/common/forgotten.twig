{{ header }}
<header id="content">
  <!-- Background image -->
  <div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.9);">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-md-8">
            <form class="bg-white-transparent rounded shadow-5-strong p-5" action="{{ action }}" method="post" enctype="multipart/form-data">
              <h2>{{ heading_title }}</h2>

              {% if error_warning %}
                <p class="note note-danger note-sm">{{ error_warning }}</p>
              {% endif %}

              <!-- Email input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="input-email" >{{ entry_email }}</label>
                <input name="email" value="{{ email }}" type="email" id="input-email" class="form-control" />
              </div>

              <!-- Submit button -->
              <div class="d-flex justify-content-between align-content-center">
                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> {{ button_reset }}</button>
                <a href="{{ cancel }}" class="btn btn-default"><i class="fa fa-reply"></i> {{ button_cancel }}</a>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Background image -->
</header>
{{ footer }}