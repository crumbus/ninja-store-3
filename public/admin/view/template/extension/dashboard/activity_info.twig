<div class="card" id="activity-info">
  <div class="card-header">
    <h3 class="card-title"><i class="fa fa-calendar"></i> {{ heading_title }}</h3>
  </div>
  <ul class="list-group">
    {% if activities %}
      {% for activity in activities %}
      <li class="list-group-item text-left">
          <small class="text-muted"><i class="fa fa-clock-o"></i> {{ activity.date_added }}</small><br>
          {{ activity.comment }}
      </li>
      {% endfor %}
    {% else %}
      <li class="list-group-item text-center">{{ text_no_results }}</li>
    {% endif %}
  </ul>
</div>
<style>
#activity-info .list-group-item > *,
#activity-info .list-group-item .fa {
    margin-right: 0;
}
#activity-info .list-group-item {
     display: block;
}
</style>