<h3 class="text-center">{{ heading_title }}</h3>
<div class="card-columns module-blog-latest">
 {% for article in articles %}
  <div class="card card-article">
      <div class="image">
        <a href="{{ article.href }}"><img src="{{ article.thumb }}" alt="{{ article.name }}" title="{{ article.name }}" class="img-responsive" /></a>
      </div>
      <div class="card-body">
        <h5 class="text-center"><a href="{{ article.href }}">{{ article.name }}</a></h5>
        <div class="info-row">
          <p class="views">{{ text_views }} {{ article.viewed }}</p>
          {% if article.rating %}
            <div class="rating">
                {% for i in 1..5 %}
                    {% if article.rating < i %}
                      <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
                    {% else %}
                      <span class="fa fa-stack">
                              <i class="fa fa-star fa-stack-2x"></i>
                              <i class="fa fa-star-o fa-stack-2x"></i>
                            </span>
                    {% endif %}
                {% endfor %}
            </div>
          {% endif %}
          <p class="date">{{ article.date_added }}</p>
        </div>
        <p class="text-justify">{{ article.description }}</p>
      </div>
  </div>
  {% endfor %}
</div>
