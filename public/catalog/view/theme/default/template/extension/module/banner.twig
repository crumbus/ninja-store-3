<div class="swiper-viewport">
  <div id="banner{{ module }}" class="swiper-container">
    <div class="swiper-wrapper">{% for banner in banners %}
      <div class="swiper-slide">{% if banner.link %}<a href="{{ banner.link }}"><img loading="lazy" src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>{% else %}<img loading="lazy" src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />{% endif %}</div>
      {% endfor %}</div>
  </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', () => {
  $('#banner{{ module }}').swiper({
    effect: 'fade',
    autoplay: 2500,
    autoplayDisableOnInteraction: false
  });
});
</script>
